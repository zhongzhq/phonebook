= widget_div do
  .widget
    h4
      i.icon-hand-right
      span.text-info= "组织机构 - #{ @organ.name }"
      .pull-right
        - if can? :manage, Organ
          = link_to '编辑组织信息', edit_organ_path(@organ), class: 'btn btn-link'
          = link_to '添加下级组织', new_child_organ_path(@organ), class: 'btn btn-link'
          = link_to '查看下级成员', url_for_event(:children, organ_id: @organ.id), class: 'btn btn-link', remote: true
          = link_to '审核用户', apply_members_organ_path(@organ), onclick: 'get(this);return false', class: 'btn btn-link'

    = form_tag url_for_event(:search), :class => "navbar-form", :remote => true do
      = text_field_tag 'text', nil, placeholder: '姓名/手机号/邮箱'
      = submit_tag "搜索", class: 'btn'

    .widgetarea.widgetarea-height
      #members
        = render({state: :list}, @organ.members)
      
