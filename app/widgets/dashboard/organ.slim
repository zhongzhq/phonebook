.widget
  h4
    i.icon-exchange.success
    | 我的企业
    .more.pull-right
      a href="#" 企业通讯录
  .workarea
    - organ = current_user.organs.first.try(:root)
    - if organ.nil?
      - organ_apply = OrganApply.where(:user_id => current_user.id).first
      - if organ_apply.blank?
        p
          = link_to '申请创建企业', new_applies_organ_apply_path
        p
          = link_to '申请加入企业', new_applies_user_apply_path
      - else
        p= '企业名称：' + organ_apply.organ_name
        p
          = '申请状态：' + t("state.organ_apply.#{organ_apply.state}")
          = link_to '初始化企业', init_applies_organ_apply_path(organ_apply) if organ_apply.success?
    - else
      p= '企业名称: ' + organ.name
      p
        = '企业成员: ' + organ.subtree_members.size.to_s
        - if can? :manage, Organ
          a href=applies_user_applies_path(:organ_id => organ.id) = ' 待审核: ' + UserApply.where(:actor_id => Actor.find_by_organ(organ.subtree) ).size.to_s
      p= '企业简介：' + (organ.description || '暂无描述')
