= link_to '<span class="glyphicon glyphicon-heart-empty" data-toggle="tooltip" title="未关注"></span>'.html_safe, new_follow_path(:user_id => @user_id), :remote => true, :class => "follow"

javascript:
  $(function(){
    remote($(".follow"), function(status, xhr){
      $(this).replaceWith(xhr.responseText);
    })
    
    $("[data-toggle~=tooltip]").tooltip();
  })