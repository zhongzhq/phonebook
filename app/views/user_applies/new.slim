.widget
  h4
    i.icon-upload.text-large
    span.text-info = '申请加入企业'
  .widgetarea
    = simple_form_for :apply, :url => user_applies_path, :html => {:class=>"form-horizontal form-mini"} do |f|

      = f.input :organ, label: '企业信息' do
        = f.hidden_field :organ_id

      = f.input :organ, label: '角色' do
        = f.hidden_field :membership_id

      .control-group
        .controls
          = link_to '取消', dashboards_path, :class => 'btn btn-danger'
          = f.button :submit, '申请加入企业', :class => "btn-info"

javascript:
  option_tree($("#apply_organ_id"), '/user_applies/children_organs', function(){
    option_tree($("#apply_membership_id"), '/user_applies/memberships?organ_id=' + $(this).val(), null, {on_each_change: false} )
  })